<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item {{ page == 1 ? 'disabled' }}">
            <a class="page-link" href="?per_page={{ perPage }}&page=1&term={{ searchTerm }}&sortOrder={{ sortOrder }}&sortBy={{ sortBy }}">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item {{ page == 1 ? 'disabled' }}">
            <a class="page-link" href="?per_page={{ perPage }}&page={{ page-1 }}&term={{ searchTerm }}&sortOrder={{ sortOrder }}&sortBy={{ sortBy }}">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?per_page={{ perPage }}&page={{ page }}&term={{ searchTerm }}&sortOrder={{ sortOrder }}&sortBy={{ sortBy }}">
                {{ page }} of {{ (totalItems / perPage)|round(0, 'ceil') }}
            </a>
        </li>
        <li class="page-item {{ totalItems <= page * perPage ? 'disabled' }}">
            <a class="page-link" href="?per_page={{ perPage }}&page={{ page+1 }}&term={{ searchTerm }}&sortOrder={{ sortOrder }}&sortBy={{ sortBy }}">
                Next
            </a>
        </li>
        <li class="page-item {{ page >= (totalItems / perPage)|round(0, 'ceil') ? 'disabled' }}">
            <a class="page-link" href="?per_page={{ perPage }}&page={{ (totalItems / perPage)|round(0, 'ceil') }}&term={{ searchTerm }}&sortOrder={{ sortOrder }}&sortBy={{ sortBy }}">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>