{% extends 'base.html.twig' %}

{% block title %}Collection | Add comic{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <form id="addComicForm">
            <div class="form-group">
                <label for="comicName">Name</label>
                <input type="text" class="form-control" name="name" id="comicName" value="">
            </div>
            <div class="row form-group">
                <div class="col">
                    <label for="comicPublisher">Publisher</label>
                    <input type="text" id="comicPublisher" class="form-control" name="publisherName" value="">
                </div>
                <div class="col">
                    <label for="comicYear">Year</label>
                    <input type="number" id="comicYear" class="form-control" name="year" value="" min="1901" max="2030">
                </div>
            </div>
            <div class="form-group">
                <label for="comicDescription">Description</label>
                <textarea class="form-control" id="comicDescription" name="description" rows="4"></textarea>
            </div>
            <div class="row form-group">
                <div class="col">
                    <label for="comicAddedToCollection">Added to collection</label>
                    <input type="date" class="form-control" id="comicAddedToCollection" name="addedToCollection" value="{{ "now"|date("Y-m-d") }}">
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <label for="comicPrice">Price</label>
                    <input type="number" id="comicPrice" class="form-control" name="price" value="">
                </div>
                <div class="col">
                    <label for="comicComicVineId">ComicVine Id</label>
                    <input type="text" id="comicComicVineId" class="form-control" name="comicVineId" value="">
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <label for="comicCoverImage">Cover image</label>
                    <input type="file" class="form-control-file" name="coverImage" id="comicCoverImage">
                </div>
                <div class="col">
                    <label for="comicCoverImage">Rating</label>
                    <div class="my-rating"></div>
                    <input type="range" id="rating" name="rating" min="0" max="3" value="0" style="display:none;">
                </div>
            </div>
            <div class="form-group">
            </div>
            <button type="submit" class="btn btn-primary float-right">Save</button>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/star-rating-svg@3.5.0/src/css/star-rating-svg.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/star-rating-svg@3.5.0/dist/jquery.star-rating-svg.min.js" type="text/javascript"></script>
    <script src="/js/collection/add-comics.js" type="text/javascript"></script>
{% endblock %}