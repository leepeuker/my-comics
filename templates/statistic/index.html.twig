{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 1em">
        <p>Total cost:<b> {{ (totalPrice/100)|number_format(2, ',', '.') }} €</b></p>
        <p>Average cost per book: <b>{{ (averagePrice/100)|number_format(2, ',', '.') }} €</b></p>

        <canvas id="myChart" width="50%"></canvas>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.bundle.min.js" type="text/javascript"></script>
    <script>
        var ctx = document.getElementById('myChart');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                datasets: [{
                    data: [
                        10,
                        20,
                        30
                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132)',
                        'rgba(54, 162, 235)',
                        'rgba(255, 206, 86)',
                    ],
                }],
                labels: [
                    'Red',
                    'Yellow',
                    'Blue'
                ]
            },
            options: {}
        });
    </script>
{% endblock %}